---
export const prerender = true;

import ThreeColumnLayout from "../../layouts/ThreeColumnLayout.astro";
import TagFilterWrapper from "../../components/TagFilterWrapper.astro";
import { getCollection } from 'astro:content';

const shorts = await getCollection('shorts');
const sortedShorts = shorts.sort((a: any, b: any) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const tagCounts = new Map<string, number>();
shorts.forEach((short: any) => {
  short.data.tags.forEach((tag: string) => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

const tags = Array.from(tagCounts.entries())
  .map(([name, count]) => ({ name, count }))
  .sort((a, b) => b.count - a.count);
---

<ThreeColumnLayout 
  title="Shorts - Portfolio"
  headerTitle="Shorts"
  headerDescription="Quick technical snippets, tips, and notes."
>
  <!-- Shorts List -->
  <div slot="content" class="border-t border-gray-400/40">
    {sortedShorts.map((short: any) => (
      <a href={`/shorts/${short.slug}`} data-tags={short.data.tags.join(',')} class="group block">
        <article class="py-4 border-b last:border-b-0 cursor-pointer">
          <div class="flex items-start justify-between gap-4 mb-2">
            <div class="flex-1">
              <h2 class="text-lg font-semibold text-gray-800 mb-1">
                {short.data.title}
              </h2>
              <p class="text-sm text-gray-600 italic mb-2">
                {short.data.category}
              </p>
              <p class="text-sm text-gray-700 leading-relaxed">
                {short.data.excerpt}
              </p>
              <div class="flex gap-2 mt-2">
                {short.data.tags.map((tag: string) => (
                  <span class="text-xs text-gray-600">#{tag}</span>
                ))}
              </div>
            </div>
            <p class="text-sm text-gray-600 whitespace-nowrap">
              {short.data.date}
            </p>
          </div>
        </article>
      </a>
    ))}
  </div>

  <!-- Tag Filter Sidebar -->
  <TagFilterWrapper slot="sidebar" tags={tags} />
</ThreeColumnLayout>
