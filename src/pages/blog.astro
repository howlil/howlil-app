---
import Navbar from "../components/Navbar";
import "../styles/global.css";

const blogPosts = [
  {
    title: "Building the Future",
    date: "May 15, 2024",
    category: "Technology",
    excerpt:
      "Exploring the intersection of technology and entrepreneurship, and how we can build products that make a real difference in people's lives.",
  },
  {
    title: "Lessons from Building in Public",
    date: "April 22, 2024",
    category: "Startups",
    excerpt:
      "My journey of building SaaS products in public and the valuable lessons I've learned along the way about transparency and community.",
  },
  {
    title: "From Engineer to Entrepreneur",
    date: "March 10, 2024",
    category: "Career",
    excerpt:
      "Why I decided to leave my comfortable software engineering job to pursue entrepreneurship full-time and what I've learned so far.",
  },
  {
    title: "The Power of Side Projects",
    date: "February 5, 2024",
    category: "Development",
    excerpt:
      "How building side projects can accelerate your learning, expand your network, and open unexpected opportunities.",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Blog - Portfolio</title>
  </head>
  <body>
    <Navbar client:load />
    
    <main class="pt-24 pb-10 px-6">
      <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
          <h1 class="text-4xl font-serif font-bold text-gray-800 mb-3">
            Blog
          </h1>
          <p class="text-base text-gray-700 leading-relaxed font-serif">
            Thoughts, stories, and ideas.
          </p>
        </div>

        <!-- Blog Posts List -->
        <div class="border-t border-gray-200">
          {
            blogPosts.map((post) => (
              <article class="py-4 border-b border-gray-200 last:border-b-0 cursor-pointer hover:bg-gray-50 transition-colors">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <div class="flex-1">
                    <h2 class="text-lg font-serif font-semibold text-gray-800 mb-1">
                      {post.title}
                    </h2>
                    <p class="text-sm text-gray-600 font-serif italic mb-2">
                      {post.category}
                    </p>
                    <p class="text-sm text-gray-600 leading-relaxed font-serif">
                      {post.excerpt}
                    </p>
                  </div>
                  <p class="text-sm text-gray-500 font-serif whitespace-nowrap">
                    {post.date}
                  </p>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </main>
  </body>
</html>
