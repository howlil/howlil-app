---
export const prerender = true;

import BaseLayout from "../layouts/BaseLayout.astro";
import SocialLinks from "../components/SocialLinks";
import SectionHeader from "../components/SectionHeader.astro";
import ArrowLink from "../components/ArrowLink.astro";
import { sortByDateDesc } from "../utils/collectionHelpers";
import { getCollection } from "astro:content";

const siteName = "Ulil";

const sortedPosts = sortByDateDesc(await getCollection("blog"));
const latestPosts = sortedPosts.slice(0, 3);

const sortedProjects = sortByDateDesc(await getCollection("projects"));
const recentProjects = sortedProjects.slice(0, 2);
---

<BaseLayout
  title={`${siteName} - Portfolio`}
  description={`${siteName} builds backend systems and fullstack solutions with a focus on reliability, APIs, and production-ready systems.`}
>
  <main class="pt-20 pb-16 px-6">
    <div class="max-w-2xl mx-auto">
      <!-- Hero -->
      <section class="mb-14">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-4">
          Hi, I'm {siteName} <span class="inline-block">ðŸ‘‹</span>
        </h1>
        <p class="text-base text-gray-700 leading-relaxed mb-6 text-justify">
          I build backend systems and fullstack solutions with a focus on reliability,
          automation, and clear APIs. Most of my work is in Node.js/TypeScript, from
          logistics and mentoring platforms to school systems and ticketing, handling
          payments, real-time features, and deployment pipelines so things stay stable
          in production. I like diving into infrastructure, DevOps, and how architecture
          choices affect long-term maintainability.
        </p>
        <ArrowLink href="/about" label="Explore My Story" direction="forward" underline={true} />
      </section>

      <!-- Latest posts -->
      <section class="mb-14">
        <SectionHeader title="Latest posts" linkHref="/blog" linkLabel="See all posts" />
        <ul class="space-y-3">
          {
            latestPosts.length > 0 ? (
              latestPosts.map((post: any) => (
                <li>
                  <a
                    href={`/blog/${post.slug}`}
                    class="block text-gray-700 hover:text-gray-900 transition-colors"
                  >
                    {post.data.title}
                  </a>
                </li>
              ))
            ) : (
              <li class="text-sm text-gray-500">No posts yet.</li>
            )
          }
        </ul>
      </section>

      <!-- Recent projects -->
      <section class="mb-14">
        <SectionHeader title="Recent projects" linkHref="/projects" linkLabel="See all projects" />
        <ul class="space-y-4">
          {
            recentProjects.length > 0 ? (
              recentProjects.map((project: any) => (
                <li>
                  <a
                    href={`/projects/${project.slug}`}
                    class="group block p-4 rounded-lg border border-gray-200 hover:border-gray-400 transition-colors"
                  >
                    <h3 class="font-semibold text-gray-800 group-hover:text-gray-900">
                      {project.data.title}
                    </h3>
                    <p class="text-sm text-gray-600 mt-1 text-justify">
                      {project.data.excerpt}
                    </p>
                  </a>
                </li>
              ))
            ) : (
              <li class="text-sm text-gray-500">No projects yet.</li>
            )
          }
        </ul>
      </section>

      <!-- Get in Touch -->
      <section>
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Get in Touch</h2>
        <p class="text-sm text-gray-600 mb-4 text-justify">
          Feel free to reach out via social media.
        </p>
        <SocialLinks client:visible orientation="horizontal" />
      </section>
    </div>
  </main>
</BaseLayout>
