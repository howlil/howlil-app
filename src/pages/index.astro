                education.map((edu) => (
                  <EducationItem
                    client:load
                    institution={edu.institution}
                    degree={edu.degree}
                    period={edu.period}
                    description={edu.description}
                    points={edu.points}
                  />
                ))
              }
            </div>
          </section>

          <!-- Awards -->
          <section>
            <h2 class="text-lg font-semibold text-gray-800 mb-3 py-0.5 border-b-1 border-gray-200">
              Awards
