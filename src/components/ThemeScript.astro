<script is:inline>
  (function(){
    try{
      var theme=localStorage.getItem('theme');
      var isDark=theme==='dark';
      var html=document.documentElement;
      if(isDark){
        html.classList.add('dark');
        html.style.setProperty('background-color','#1C1917','important');
        html.style.setProperty('color','#E7E5E4','important');
      }else{
        html.classList.remove('dark');
        html.style.setProperty('background-color','#FAF8F5','important');
        html.style.setProperty('color','#292524','important');
      }
    }catch(e){}
  })();
</script>
<style is:global>
  html{
    background-color:#FAF8F5!important;
    color:#292524!important;
    background-image: none;
    background-attachment: fixed!important;
  }
  html.dark{
    background-color:#1C1917!important;
    color:#E7E5E4!important;
    background-image: none;
    background-attachment: fixed!important;
  }
</style>

